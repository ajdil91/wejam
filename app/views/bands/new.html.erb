<h1 class="text-center sign-up">Create a band</h1>

<div class="container sign-up-container">
  <%= simple_form_for @band do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "name" },
                  placeholder: "Band name"%>
      <%= f.input :genre,
                  required: true,
                  input_html: { autocomplete: "genre" },
                  placeholder: "Genre" %>
      <%= f.input :address,
                  required: true,
                  input_html: { autocomplete: "address"},
                  placeholder: "Which area are you located?" %>
     <%= f.input :instrument,
                  required: true,
                  input_html: { autocomplete: "instrument"},
                  placeholder: "What musician are you looking for?" %>
     <%= f.input :description,
                  required: true,
                  input_html: { autocomplete: "description"},
                  placeholder: "Describe your band ;)" %>
      <%= f.input :photo,
                  required: true %>
      <%= f.input :photo_cache, as: :hidden %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Create", class: "submit-btn" %>
    </div>
  <% end %>
</div>
