<!-- This is just a basic display -->
<div class="cover-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path 'bandcover.jpg' %>');">
  <% if @user.photo.present? %>
  <%= cl_image_tag @user.photo, class:"avatar-photo", alt:"Avatar" %>
  <% else %>
    <p>No Photo</p>
  <% end %>

</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-12">
      <div class="text-center profile-card">
        <h1><%= @user.name %></h1>
        <h3>Musician</h3>
        <h3>Instrument: <%= @user.instrument %></h3>
      </div>
      <div class="text-center profile-card">
        <% if (@user.description.nil?) || (@user.description.empty?) %>
        <p>No Description.</p>
        <% else %>
          <p><%= @user.description %></p>
        <% end %>
      </div>
      <div class="text-center profile-card">
      <h3>Pending Requests</h3>
        <% if @jamsession %>
        <% if @jamsession.status.empty? %>
        <p>No pending requests</p>
        <% elsif @jamsession.status == "pending" %>
        <p>Request to <%= @band.name %> pending...</p>
        <% elsif @jamsession.status == "accepted" %>
        <p>Your request was accepted by <%= @band.name %>!</p>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
