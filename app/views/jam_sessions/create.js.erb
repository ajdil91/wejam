function refreshInner(innerHTML) {
  const connectArea = document.getElementById('connect_area');
  connectArea.innerHTML = innerHTML;
}

<% if @jam_session.errors.any? %>
  refreshInner('<%= j render "connect_form" %>');
<% else %>
  refreshInner('<%= j render "pending" %>');
  swal({
        title: "Hey !",
        text: "Your request sent..",
        icon: "success"
      });
<% end %>